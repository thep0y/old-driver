{
  "build": {
    "beforeDevCommand": "pnpm dev:vite",
    "beforeBuildCommand": "pnpm build:vite",
    "beforeBundleCommand": "if \"%OS%\" == \"Windows_NT\" (upx -9 src-tauri/target/release/old-driver.exe) else (upx -9 src-tauri/target/release/old-driver)",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "old-driver",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      },
      "shell": {
        "open": "^[a-zA-Z]:\\\\|^[a-zA-Z]:/[A-Za-z.]|^/[A-Za-z]|^https?://"
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.thepoy.olddriver",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": { "zh-CN": { "localePath": "./wix/locales/zh-CN.wxl" } },
          "template": "./wix/app.wxs"
        }
      }
    },
    "security": {
      "csp": "img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 676,
        "resizable": true,
        "hiddenTitle": true,
        "minWidth": 500,
        "minHeight": 676,
        "maxWidth": 1600,
        "maxHeight": 1010,
        "title": "PDF 老司机"
      }
    ]
  }
}
